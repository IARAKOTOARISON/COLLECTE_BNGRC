<IfModule mod_rewrite.c>
    DirectoryIndex index.php
    Options -Indexes

    RewriteEngine On
    RewriteBase /ETU004231/examV2/

    # Rediriger tout ce qui n'est pas un fichier ou un dossier vers index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]

    # Pour les fichiers statiques (assets, includes, etc.)
    RewriteRule ^(assets|includes)/(.*) $1/$2 [L]
</IfModule>
